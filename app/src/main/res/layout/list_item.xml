<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">

    <octotentacle.yalauncher.views.SquareImageView
            android:id="@+id/item_icon"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_marginEnd="@dimen/square_margin"
            android:layout_marginRight="@dimen/square_margin"
            app:layout_constraintEnd_toStartOf="@id/item_name"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@color/colorAccent"/>

    <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/icon_size"
            android:layout_marginStart="@dimen/square_margin"
            android:layout_marginLeft="@dimen/square_margin"
            android:gravity="center"
            android:lines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            app:layout_constraintStart_toEndOf="@+id/item_icon"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Color"/>

</android.support.constraint.ConstraintLayout>